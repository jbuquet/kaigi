.modal.fade.in.show#joinModal
  .modal-dialog
    .modal-content
      .modal-header
        %h4.modal-title
          Please enter your name to start
      .modal-body
        = form_tag(retrospective_users_path(:retrospective_id => current_retro.public_key), :method => :post) do
          = text_field_tag 'user[name]', '', placeholder: 'Your name', class: 'retro-input', autocomplete: 'off'
          = submit_tag 'Join'

.modal-backdrop.fade.in