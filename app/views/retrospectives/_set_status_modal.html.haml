- unless current_retro.current_status_id
  .modal.fade.in.show#currentTimeboxModal
    .modal-dialog
      .modal-content
        .modal-header
          %h4.modal-title
            Current timebox

        .modal-body.clearfix
          %ul.time-box
            %form#new_statuses{ 'accept-charset'=> 'UTF-8' }
              %li#set_timebox_section
                .row
                  .col-md-3.col-md-offset-3
                    %input{ name: 'status[minutes]', min: '00', max: '59',  value: '00', type: 'number', class: 'time-input text-center ' }
                  .time-dots
                    = ':'
                  .col-md-3
                    %input{ name: 'status[seconds]', min: '00', max: '59', value: '00', type: 'number', class: 'time-input text-center' }
              %li.current-timebox
                %span
                  %input#start_current_time{ type: :submit, value: 'Start', class: 'end-btn radius2px' }
  .modal-backdrop.fade.in
